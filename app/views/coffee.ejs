<%- include ("partials/header.ejs") %>
<main>
   <section id="coffee">
       <article>
            <img
              src="../images/coffees/<%= coffee.reference %>.png"
              alt="<%= coffee.name %>"
            />
            <div class="coffee-details">
              <h1><%= coffee.name %></h1>
              <p><%= coffee.description %></p>
              <div>
                  <h2>Caractéristiques :</h2>
                  <p><%= coffee.coffee_type %></p>
              </div>
              <div>
                  <h2>Origine :</h2>
                  <p><%= coffee.country_name %></p>
              </div>
              <div>
                  <h2>Prix:</h2>
                  <p><%= coffee.price %> €/kg</p>
              </div>
              <% if (session.isAdmin) { %>
                <a class="button" href="/admin/editCoffee/<%= coffee.coffee_id %>">Modifier</a>
                <form action="/admin/coffees/<%= coffee.coffee_id %>/delete" method="POST" style="display:inline" onsubmit="return confirm('Supprimer définitivement « <%= coffee.name %> » ?');">
                  <button class="button" type="submit">Supprimer</button>
                </form>
              <% } %>
              <a class="button-outline" href="/coffees">Retour au catalogue</a>
            </div>
          </article>
   </section>
</main>
<%- include ("partials/footer.ejs") %>
