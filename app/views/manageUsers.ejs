<%- include("partials/header.ejs") %>
<main>
    <div>
        <h1>Gestion des utilisateurs</h1>
        <% if (okMessage) { %>
            <p class="okMessage"><%= okMessage %></p>
        <% } %>
        <% if (errorMessage) { %>
            <p class="errorMessage"><%= errorMessage %></p>
        <% } %>
    </div>
    <table>
        <thead>
            <tr>
                <th>Nom d'utilisateur</th>
                <th>Admin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.is_admin ? "Oui" : "Non" %></td>
                    <td class="actions">
                        <a href="/admin/editUser/<%= user.id %>" class="button">Modifier</a>
                        <form action="/admin/users/<%= user.id %>/delete" method="POST" style="display:inline" onsubmit="return confirm('Supprimer définitivement « <%= user.username %> » ?');">
                            <button class="button" type="submit">Supprimer</button>
                       </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <nav class="admin-nav">
        <ul>
            <li><a class="button" href="/admin/createUser" >Créer un utilisateur</a></li>
            <li><a class="button" href="/admin">Retour à l'administration</a></li>
        </ul>
    </nav>
</main>
<%- include("partials/footer.ejs") %>